# .env.production — TiendaDigital Production Environment
# Copy to .env.production and fill in real values
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ── Database ──────────────────────────────────────────────
# Host MUST be "postgres" (Docker service name, NOT localhost)
DATABASE_URL="postgresql://tienda:DB_PASSWORD_HERE@postgres:5432/tienda_digital?schema=public"
DB_USER="tienda"
DB_PASSWORD="CHANGE_ME_generate_with_openssl_rand_hex_16"
DB_NAME="tienda_digital"

# ── NextAuth ──────────────────────────────────────────────
NEXTAUTH_SECRET="CHANGE_ME_generate_with_openssl_rand_hex_32"
NEXTAUTH_URL="https://tienda.omegacraft.cl"

# ── App ───────────────────────────────────────────────────
APP_URL="https://tienda.omegacraft.cl"
APP_NAME="OmegaCraft Store"

# ── Initial Admin (used by entrypoint if no admin exists) ─
ADMIN_EMAIL="admin@omegacraft.cl"
ADMIN_PASSWORD="CHANGE_ME_use_a_strong_password"
ADMIN_NAME="Admin"

# ── Download Tokens ───────────────────────────────────────
DOWNLOAD_SECRET="CHANGE_ME_generate_with_openssl_rand_hex_32"

# ── IP Encryption (AES-256-GCM) ──────────────────────────
IP_ENCRYPTION_KEY="CHANGE_ME_generate_with_openssl_rand_hex_32"

# ── PayPal (configure when ready for payments) ───────────
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_WEBHOOK_ID=""
PAYPAL_MODE="sandbox"

# ── S3 / Cloudflare R2 (configure when ready) ───────────
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET="tienda-digital"
S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
S3_REGION="auto"

# ── SMTP (configure when ready for emails) ───────────────
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="ventas@omegacraft.cl"

# ── Uploads (container internal path, do not change) ─────
UPLOADS_DIR="/data/uploads"
